---
import Layout from '/layouts/Layout.astro'
import Work from '/components/Work/index.astro'
import Button from '/components/Button.vue'
import PauseButton from '/components/PauseButton.vue'
---

<Layout bodyClass="pb-12vh">
    <header class="container py-10vh flex justify-between items-center">
        <h1 class="text-lg/snug w-fit relative">
            <div role="none" class="top-2 right-full size-0.5 absolute invisible mr-3.5" style="view-transition-name: back" />
            <span style="view-transition-name: name">Maxwell Barvian</span><br/>
            <span style="view-transition-name: title;">Front-end Developer</span>
        </h1>
        <nav aria-label="Social links" class="flex gap-4 items-center">
            <Button icon="email" href="mailto:max@barvian.me" preset="tertiary" />
            <Button icon="linkedin" href="https://linkedin.com/in/barvian" target="_blank" preset="tertiary" />
            <Button icon="github" target="_blank" href="https://github.com/barvian" preset="tertiary" />
            <Button icon="dribbble" target="_blank" href="https://dribbble.com/barvian" preset="tertiary" />
            <Button icon="x" target="_blank" href="https://x.com/mbarvian" preset="tertiary" />
        </nav>
    </header>
    <main>
        <ol class="grid md:grid-cols-2 xl:grid-cols-3 container gap-10">
            <li><Work slug="rithm" /></li>
            <li><Work slug="fluid-type" /></li>
            <li><Work slug="css-carousels" /></li>
            <li><Work slug="das-grune" /></li>
            <li><Work slug="humblecast" /></li>
        </ol>
    </main>
    <div class="fixed bottom-6 right-6">
        <PauseButton client:only="vue" />
    </div>
</Layout>