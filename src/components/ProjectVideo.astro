---
import { getVideo } from '@/utils/assets'
import type { ProjectEntry } from '@/schemas/work'
import ProjectVideoReact from './ProjectVideo'

type Props = {
	entry: ProjectEntry
}

const { entry } = Astro.props
const { slug } = entry

const { poster, src } = await getVideo(entry)
---

<ProjectVideoReact {slug} {poster} {src} client:load transition:persist={`${slug}-hero`} />
